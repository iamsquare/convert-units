{
  "compilerOptions": {
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES5",
    "module": "ES2020",
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
    "declaration": true,
    "strict": true,
    "outDir": "./lib/esm",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "Node"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib", "**/__tests__/**"]
}
